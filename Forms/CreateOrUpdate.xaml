<Page x:Class="TotalTask.Forms.CreateOrUpdate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TotalTask.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateOrUpdate">

    <Grid>
        <StackPanel>
            <GroupBox Header="Введите название">
                <TextBox Name="TBTitle"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите стоимость">
                <TextBox Name="TBCost"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите длительность">
                <TextBox Name="TBDuration"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите описание">
                <TextBox Name="TBComment"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите скидку">
                <TextBox Name="TBDiscount"></TextBox>
            </GroupBox>
            <Button Click="Button_Click_1">Сохранить</Button>
            <Button Click="Button_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
